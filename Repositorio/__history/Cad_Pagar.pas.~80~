  TfrmCad_Pagar = class(TfrmForm_Modelo)
    dbgPagar: TDBGrid;
    gbReceber: TGroupBox;
    lblId: TLabel;
    lblNrDocumento: TLabel;
    lblDtEmissao: TLabel;
